@model Maple_Building_Management_App.Models.AccountModel

@{
    ViewBag.Title = "View Profile";
}

@using (Html.BeginForm())
{
    <div id="allpage" class="panel panel-success">
        <div class="panel-heading text-center">
            <h3>My Profile</h3>
        </div>
        <div class="form-group">
            First Name: @Html.DisplayFor(model => model.FirstName)
        </div>
        <div class="form-group">
            Last Name:@Html.DisplayFor(model => model.LastName)
        </div>
        <div class="form-group">
            Email Address: @Html.DisplayFor(model => model.EmailAddress)
        </div>
        <div class="form-group">
            Status: @Html.DisplayFor(model => model.Tenant)
        </div>
        <div class="form-group">
            Property Code: @Html.DisplayFor(model => model.PropertyCode)
        </div>
        <div class="panel-heading text-center">
            @Html.ActionLink("Update Your Profile", "EditProfile") |
            @Html.ActionLink("Back to Home", "Index")
        </div>
    </div>
}
