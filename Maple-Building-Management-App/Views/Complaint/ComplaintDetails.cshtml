@model Maple_Building_Management_App.Models.ComplaintModel

@{
    ViewBag.Title = "Complaint Details";
}

@using Maple_Building_Management_App.Models;

<h2>Complaint Details</h2>


<div class="text-right">
    @Html.ActionLink("Back to List", "ViewComplaints")
</div>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.ComplaintStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ComplaintStatus)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ComplaintType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.ComplaintType)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IncidentDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.IncidentDate)
            </div>
        </div>


        @if ((String)Session["UserType"] == "P" && Model.ComplaintStatus != "Resolved")
        {
            <div class="text-right">
                <a class="btn btn-primary" onclick="location.href='@Url.Action("ResolveComplaint", "Complaint", new { id = Model.Id })'"> Complaint Resolved</a>
            </div>
        }

        @{
            if (Model.ComplaintStatus == "Resolved" && Model.Feedback != null && Model.Feedback != "")
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.Feedback, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Feedback)
                    </div>
                </div>
            }
        }
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
