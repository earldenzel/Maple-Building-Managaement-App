<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark navbar-fixed-top bg-dark">
        <div class="container">
            <div class="navbar-header">
                <img src="~/Images/Small_MBM-Logo.png" alt="Logo"class="responsive" />                
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item nav-link">@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Session["User"] == null)
                    {
                        <li class="nav-item nav-link">@Html.ActionLink("Register", "Register", "Home")</li>
                        <li class="nav-item nav-link">@Html.ActionLink("Login", "Login", "Home")</li>
                    }
                    <li class="nav-item nav-link">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="nav-item nav-link">@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (Session["User"] != null)
                    {
                        if ((bool)Session["Admin"])
                        {
                            <li class="nav-item nav-link">@Html.ActionLink("View All Accounts", "ViewAccounts", "Home")</li>
                            <li class="nav-item nav-link">@Html.ActionLink("View All Complaints", "ViewAllComplaints", "Complaint")</li>
                        }
                        else if (Session["TenantID"] != null)
                        {
                            <li class="nav-item nav-link">@Html.ActionLink("File Complaint", "FileComplaint", "Complaint")</li>
                        }
                        if (!(bool)Session["Admin"])
                        {
                        <li class="nav-item nav-link">@Html.ActionLink("View My Complaints", "ViewComplaints", "Complaint")</li>
                        }
                        <li class="nav-item nav-link">@Html.ActionLink("Manage Account", "Index", "Manage")</li>
                        <li class="nav-item nav-link">@Html.ActionLink("Logout", "Logout", "Home")</li>

                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Maple Building Management Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
